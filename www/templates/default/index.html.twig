{% extends 'base.html.twig' %}

{% block title %}
    Fetch videos
{% endblock %}

{% block h1_header %}Fetch youtube videos{% endblock %}

{% block body %}

    <form action="{{ path('app_main_list') }}" method="GET">
        <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="youtube-channel-id">
                Youtube Channel Id
            </label>
            <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="youtube-channel-id" name="youtube-channel-id" type="text" />
        </div>
        <div class="flex items-center justify-between">
            <input class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit" value="Fetch videos" />
        </div>
    </form>

{% endblock %}
