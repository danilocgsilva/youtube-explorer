{% extends 'base.html.twig' %}

{% block title %}
    List of videos
{% endblock %}

{% block h1_header %}
    Result list
{% endblock %}

{% block body %}

    <p>Videos from {{ videos_list.channelTitle }}</p>
    <p>
        The channel has
        {{ videos_list.channelVideosCount }}
        videos.
    </p>
    <hr />
    <ul>
        {% for video in videos_list.videosList %}
            <li>
                {{ video.videoTitle }} - {{ video.publishTimeString }}
            </li>
        {% endfor %}
    </ul>

{% endblock %}
